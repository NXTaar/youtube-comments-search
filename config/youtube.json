{
    "collectionRegex": "^items/",
    "common": {
        "maxResults": 100,
        "part": "snippet",
        "textFormat": "plainText"
    },
    "comments": {
        "order": "relevance",
        "fields": {
            "nextPageToken": "nextPageToken",
            "videoId": "items/snippet/videoId",
            "text": "items/snippet/topLevelComment/snippet/textDisplay",
            "author": "items/snippet/topLevelComment/snippet/authorDisplayName",
            "channel": "items/snippet/topLevelComment/snippet/authorChannelUrl",
            "publishedAt": "items/snippet/topLevelComment/snippet/publishedAt",
            "commentId": "items/snippet/topLevelComment/id",
            "replies": "items/snippet/totalReplyCount"
        }
    },
    "replies": {
        "fields": {
            "nextPageToken": "nextPageToken",
            "author": "items/snippet/authorDisplayName",
            "channel": "items/snippet/authorChannelUrl",
            "text": "items/snippet/textDisplay",
            "publishedAt": "items/snippet/publishedAt",
            "parentId": "items/snippet/parentId"
        }
    }
}